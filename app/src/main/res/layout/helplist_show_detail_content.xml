<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jeon.helper.helpList.showDetailContent"
    android:background="#e8f3fd"
    android:orientation="vertical">




    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- 제목 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="제목 : "
                android:textSize="20sp" />

            <TextView
                android:id="@+id/showDetailGiveHelpTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp" />

        </LinearLayout>

        <!-- 기간 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="기간 : "
                android:textSize="20sp" />

            <TextView
                android:id="@+id/showDetailGiveHelpSdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="~"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/showDetailGiveHelpEdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp" />

        </LinearLayout>

        <!--성별 인원수 수고비-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="성별 : "
                android:textSize="18dp" />

            <ImageView
                android:id="@+id/showDetailGiveHelpGender"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                android:src="@drawable/genderdefault" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:text="모집인원 : "
                android:textSize="18dp" />

            <TextView
                android:id="@+id/showDetailGiveHelpHelper"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="3"
                android:textSize="18dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:text="명"
                android:textSize="15dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                android:src="@drawable/money" />

            <TextView
                android:id="@+id/showDetailGiveHelpPay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:text="00000"
                android:textSize="18dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="(원)"
                android:textSize="13sp" />


        </LinearLayout>

        <!--지역 주소-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="지역 :"
                android:layout_marginRight="5dp"/>

            <TextView
                android:id="@+id/showDetailGiveHelpLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="인천광역시"
                android:textSize="20sp" />


        </LinearLayout>

        <!--상세 주소-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="상세주소 :"
                android:layout_marginRight="5dp"/>

            <TextView
                android:id="@+id/showDetailGiveHelpAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="상세주소"
                android:textSize="18sp" />

        </LinearLayout>

        <!--사진-->
        <LinearLayout
            android:id="@+id/showDetailGiveHelpViewPagerLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_weight="3">


            <!--id="@+id/show_Add_Ask_Help_ViewPager"-->
            <view
                android:id="@+id/show_Detail_Add_Ask_Help_ViewPager"
                class="android.support.v4.view.ViewPager"

                layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="400dp" />

        </LinearLayout>


        <!-- 버튼 -->
        <LinearLayout
            android:id="@+id/showDetailGiveHelpMapBtnLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:layout_weight="0"
            android:gravity="center">

            <LinearLayout
                android:id="@+id/ShowDetailGiveHelpMissionLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/mission_show" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingTop="5dp"
                    android:text="수행지 보기" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/ShowDetailGiveHelpMeetingLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/meeting_show" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="도착지 보기\n(만남의 장소)" />

            </LinearLayout>

        </LinearLayout>

        <!-- 지도 -->
        <LinearLayout
            android:id="@+id/showDetailGiveHelpMapLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_weight="3"
            android:baselineAligned="false">

            <!-- 지도 프레그 먼트-->
            <fragment
                android:id="@+id/showDetailGiveHelpMap"
                class="com.google.android.gms.maps.MapFragment"
                android:layout_width="0dp"
                android:layout_height="300dp"
                android:layout_weight="1" />


        </LinearLayout>

        <!-- 내용 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">
            <!--경계선-->
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:src="@drawable/line" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="내용"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/showDetailGiveHelpContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="11"
                android:minLines="11"
                android:textSize="15sp" />

        </LinearLayout>

        <!--경계선-->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@drawable/line" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="- Help 요청자 정보 -"
            android:textSize="10sp"/>

        <!-- 유저 정보-->
        <LinearLayout
            android:id="@+id/showDetailMakeUserLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">


            <ImageView
                android:id="@+id/showDetailGiveHelpUserProfileImage"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="fitXY"
                android:src="@drawable/kakao_default_profile_image" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/showDetailGiveHelpUserIdNickName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="아이디 / 닉네임"
                        android:textSize="15sp" />

                    <ImageView
                        android:id="@+id/showDetailGiveHelpUserGender"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="10dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/genderdefault" />


                </LinearLayout>


                <TextView
                    android:id="@+id/showDetailGiveHelpUserLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="신용 점수 :"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/showDetailGiveHelpUserAskPoint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10"
                        android:textSize="15sp" />


                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

        <!--경계선-->
        <ImageView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@drawable/line" />

        <!-- 버튼-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1">


            <Button
                android:id="@+id/showDetailOkBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/button_background"
                android:textColor="#ffffff"
                android:text="확인" />

        </LinearLayout>


    </LinearLayout>


</ScrollView>
