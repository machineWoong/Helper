<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/exchangeLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:background="#e8f3fd"
    android:orientation="vertical">

    <!-- 작성일 --> <!--제목-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="제목:"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/exchangeTitleItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="2"
            android:text="도움 요청 제목"
            android:textSize="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="작성일:"
            android:textAlignment="viewEnd"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/exchangeMakeDateItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:text="2018/02/22"
            android:textSize="15dp" />




    </LinearLayout>

    <!--지원자수, 페이, 상태-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="지원자 수 :"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/exchangeApplyHelperCountItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="10명"
            android:textSize="15dp" />


        <TextView
            android:id="@+id/exchangePayItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:text="100000"
            android:textAlignment="viewEnd"
            android:textSize="15dp" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="bottom"
            android:layout_marginLeft="5dp"
            android:src="@drawable/money" />

        <TextView
            android:id="@+id/exchangeStateItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="정산중"
            android:textAlignment="viewEnd"
            android:textSize="20dp" />


    </LinearLayout>


    <!--경계선-->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@drawable/line" />


</LinearLayout>