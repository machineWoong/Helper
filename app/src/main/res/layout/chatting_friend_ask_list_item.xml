<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical">

    <LinearLayout
        android:id="@+id/friend_ask_item_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="8"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/friend_ask_profile"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="fitXY"
            android:src="@drawable/kakao_default_profile_image" />

        <TextView
            android:id="@+id/friend_ask_nick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="닉네임"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="2">


        <TextView
            android:id="@+id/friend_ask_accept"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="수락"
            android:textAlignment="center"
            android:textSize="20dp" />

        <TextView
            android:layout_marginLeft="20dp"
            android:id="@+id/friend_ask_diny"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="거절"
            android:textAlignment="center"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/friend_ask_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="상태"
            android:textAlignment="center"
            android:textSize="20dp"
            android:visibility="gone" />

    </LinearLayout>


</LinearLayout>