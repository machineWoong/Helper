<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jeon.helper.giveHelp.showGiveHelp"
    android:background="#e8f3fd"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#2171b5"
        android:orientation="horizontal">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:text=" 도움 주기"
            android:textColor="#ffffff"
            android:textSize="20dp" />

        <ImageView
            android:layout_marginRight="20dp"
            android:id="@+id/showGiveHelpReport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/siren" />


    </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- 제목 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="제목 : "
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/showGiveHelpTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp" />

            </LinearLayout>

            <!-- 기간 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="기간 : "
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/showGiveHelpSdate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="~"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/showGiveHelpEdate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp" />

            </LinearLayout>

            <!--성별 인원수 수고비-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="성별 : "
                    android:textSize="18dp" />

                <ImageView
                    android:id="@+id/showGiveHelpGender"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:scaleType="fitCenter"
                    android:src="@drawable/genderdefault" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="1"
                    android:text="모집인원 : "
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/showGiveHelpHelper"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="3"
                    android:textSize="18dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:text="명"
                    android:textSize="15dp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="1"
                    android:scaleType="fitCenter"
                    android:src="@drawable/money" />

                <TextView
                    android:id="@+id/showGiveHelpPay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:text="00000"
                    android:textSize="18dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="(원)"
                    android:textSize="13sp" />


            </LinearLayout>

            <!--지역 주소-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:text="지역 :"
                    android:layout_marginRight="5dp"/>

                <TextView
                    android:id="@+id/showGiveHelpLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="인천광역시"
                    android:textSize="20sp" />


            </LinearLayout>

            <!--상세 주소-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:text="상세주소 :"
                    android:layout_marginRight="5dp"/>

                <TextView
                    android:id="@+id/showGiveHelpAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="상세주소"
                    android:textSize="18sp" />

            </LinearLayout>

            <!--사진-->
            <LinearLayout
                android:id="@+id/showGiveHelpViewPagerLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_weight="3">


                <!--id="@+id/show_Add_Ask_Help_ViewPager"-->
                <view
                    android:id="@+id/show_Add_Ask_Help_ViewPager"
                    class="android.support.v4.view.ViewPager"

                    layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="400dp" />

            </LinearLayout>


            <!-- 버튼 -->
            <LinearLayout
                android:id="@+id/showGiveHelpMapBtnLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp"
                android:layout_weight="0"
                android:gravity="center">

                <LinearLayout
                    android:id="@+id/ShowGiveHelpMissionLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@drawable/mission_show" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:paddingTop="5dp"
                        android:text="수행지 보기" />

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/ShowGiveHelpMeetingLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@drawable/meeting_show" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="도착지 보기\n(만남의 장소)" />

                </LinearLayout>

            </LinearLayout>

            <!-- 지도 -->
            <LinearLayout
                android:id="@+id/showGiveHelpMapLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_weight="3"
                android:baselineAligned="false">

                <!-- 지도 프레그 먼트-->
                <fragment
                    android:id="@+id/showGiveHelpMap"
                    class="com.google.android.gms.maps.MapFragment"
                    android:layout_width="0dp"
                    android:layout_height="300dp"
                    android:layout_weight="1" />


            </LinearLayout>

            <!-- 내용 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">
                <!--경계선-->
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"
                    android:src="@drawable/line" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="내용"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/showGiveHelpContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="11"
                    android:minLines="11"
                    android:textSize="15sp" />

            </LinearLayout>

            <!--경계선-->
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:src="@drawable/line" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="- Help 요청자 정보 -"
                android:textSize="10sp"/>

            <!-- 유저 정보-->
            <LinearLayout
                android:id="@+id/showGiveHelpUserLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">


                <ImageView
                    android:id="@+id/showGiveHelpUserProfileImage"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/kakao_default_profile_image" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/showGiveHelpUserIdNickName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:text="아이디 / 닉네임"
                            android:textSize="15sp" />

                        <ImageView
                            android:id="@+id/showGiveHelpUserGender"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginLeft="10dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/genderdefault" />


                    </LinearLayout>


                    <TextView
                        android:id="@+id/showGiveHelpUserLocation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="15sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="신용 점수 :"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/showGiveHelpUserAskPoint"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10"
                            android:textSize="15sp" />


                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>

            <!--경계선-->
            <ImageView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:src="@drawable/line" />

            <!-- 버튼-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_weight="1">


                <Button
                    android:id="@+id/showGiveHelpApplyBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_background"
                    android:textColor="#ffffff"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:text="지원하기" />

                <Button
                    android:id="@+id/showGiveHelpCancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_background"
                    android:textColor="#ffffff"
                    android:layout_weight="1"
                    android:text="뒤로가기" />



            </LinearLayout>


        </LinearLayout>


    </ScrollView>


</LinearLayout>
