<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#e8f3fd"

    android:orientation="vertical">


    <LinearLayout
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/applyUserListItemLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">


            <!-- 프로필 사진 -->
            <ImageView
                android:id="@+id/ExchangeApplyUserProfile"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:scaleType="fitXY"
                android:src="@drawable/kakao_default_profile_image" />

            <!-- 정보들 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">

                <!-- 닉네임 -->
                <TextView
                    android:id="@+id/ExchangeApplyUserNick"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="닉네임"
                    android:textSize="15sp" />

                <!-- 지역 성별-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="지역:"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/ExchangeApplyLocation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="인천광역시"
                        android:textSize="13sp" />

                    <ImageView
                        android:id="@+id/ExchangeApplyUserGender"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/genderdefault"
                        android:scaleType="fitXY"/>

                </LinearLayout>

                <!-- 지급할 수고비 -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/ExchangePayItem"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10000" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/money" />


                </LinearLayout>


            </LinearLayout>


        </LinearLayout>

        <!-- 버튼들 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/paySand"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:background="@color/colorPrimary"
                android:text="지급"
                android:textColor="#ffffff"
                android:textSize="14dp" />


        </LinearLayout>

    </LinearLayout>
    <!--경계선-->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@drawable/line" />

</LinearLayout>